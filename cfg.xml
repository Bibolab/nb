<?xml version="1.0" encoding="utf-8" ?>
<!--
Example configuration where several runtime aspects of NB are defined. 
-->

<nextbase>
    <hostname></hostname>
    <port></port>  
    <orgname>Avanti</orgname>
    <applications>
       <app>
            <name mode="on">Administrator</name>
        </app>            
    </applications>
    <langs>
    	<!-- https://en.wikipedia.org/wiki/List_of_ISO_639-2_codes  -->
    	<entry>ENG</entry>
    	<entry>SPA</entry>
		<entry>RUS</entry>
		<entry>DEU</entry>
	</langs>
    <mail mode="ON">
    	<smtphost>smtp.mail.ru</smtphost>
		<auth>true</auth>
		<smtpport>465</smtpport>
		<smtpuser>mynameis.m@mail.ru</smtpuser>
		<smtppassword>mynameis.mmynameis.m</smtppassword>     
    </mail>
    <slack mode="ON">
        <token></token>
    </slack>
   <tls mode="ON">
        <port>38789</port>
    	<certfile>server.crt</certfile>
    	<certkeyfile>server.key</certkeyfile>    	
    </tls>
   
</nextbase>
